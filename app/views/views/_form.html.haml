= form_for @view do |f|
  - if @view.errors.any?
    #error_explanation
      %h2= "#{pluralize(@view.errors.count, "error")} prohibited this view from being saved:"
      %ul
        - @view.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
