:javascript
  $(function () {

      var $container =  $("#"+ droppableDiv +" .panel-body")

       chart1 = new Highcharts.Chart({
          credits: {
            enabled: false
          },
          chart: {
            renderTo: $container[0],
            type: 'line',
            zoomType: 'xy'
          },
          title: {
              text: 'Time Series'
          },
          xAxis: {
              gridLineWidth: 0,
              type: "datetime", 
              floor: "2014"
          },
          yAxis: {
              gridLineWidth: 0,
              type: "linear" , 

          },
          tooltip: {
            formatter: function() {
                           return 'Extra data: <b>'+ this.point.c +'</b>';
                 }
          },
          series: [{
              showInLegend: false,
              color: 'red',
              data: #{@scopedsearch.map {|x| [((x.execution_timestamp)*1000), x.price_notation, x.dissemination_id]}}
          }]
      });

    $(window).resize(function() {
    height = chart.height
    width = $("#chartRow").width() / 2
    chart1.setSize(width, height, doAnimation = true);
    });

  });